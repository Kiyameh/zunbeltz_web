---
import type {CollectionEntry} from 'astro:content'
import TimeSlot from '@/components/slots/TimeSlot.astro'

const {post} = Astro.props as {post: CollectionEntry<'posts'>}
---

<div
  class="border-muted-foreground text-muted-foreground hover:bg-card rounded-xl border transition-colors duration-200"
>
  <article>
    <a href={`/blog/${post.id}`}>
      <img
        src="https://generated.vusercontent.net/placeholder.svg"
        alt="Placeholder"
        width="1020"
        height="520"
        class="aspect-[16/5] rounded-t-xl object-cover"
      />
      <div class="w-full">
        <div class="flex flex-col px-12 py-4">
          <h4 class="text-3xl font-bold">{post.data.title}</h4>
          <div class="flex gap-2">
            {
              post.data.tags.map((tag) => (
                <span class="border-muted-foreground mt-4 self-start rounded border px-2 py-1 text-muted-foreground">
                  {tag.id}
                </span>
              ))
            }
          </div>
          <TimeSlot date={post.data.createdAt} />
        </div>
      </div>
    </a>
  </article>
</div>
